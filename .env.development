# Environment Variables - Development

# Application Settings
APP_ENV=development
APP_TITLE=SoundSteps
APP_VERSION=1.1.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Security (CHANGE IN PRODUCTION!)
SECRET_KEY=dev-secret-key-change-me-in-production-use-strong-random-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Settings (Development - allow all)
CORS_ORIGINS=*
CORS_CREDENTIALS=true
CORS_METHODS=*
CORS_HEADERS=*

# Database (Currently using JSON files)
DATA_DIR=backend/data
USERS_FILE=backend/data/users.json

# API Configuration
API_BASE_URL=http://localhost:8000/api

# Logging
LOG_LEVEL=DEBUG
LOG_FORMAT=detailed

# Feature Flags
ENABLE_GUEST_ACCESS=true
MAX_GUEST_USERS=1000
ENABLE_ANALYTICS=false
