# Environment Variables Template
# Copy this file to .env.development or .env.production and fill in your values

# Application Settings
APP_ENV=development  # development | production | staging
APP_TITLE=SoundSteps
APP_VERSION=1.1.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=true  # Set to false in production

# Security Settings
# ⚠️ IMPORTANT: Generate a strong secret key for production!
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080  # 7 days

# CORS Settings
# Development: Use * to allow all origins
# Production: Specify exact allowed origins
CORS_ORIGINS=*  # or https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=*  # or GET,POST,PUT,DELETE
CORS_HEADERS=*

# Database Configuration
DATA_DIR=backend/data
USERS_FILE=backend/data/users.json

# API Configuration
API_BASE_URL=http://localhost:8000/api  # Update for production

# Logging
LOG_LEVEL=DEBUG  # DEBUG | INFO | WARNING | ERROR
LOG_FORMAT=detailed  # detailed | json

# Feature Flags
ENABLE_GUEST_ACCESS=true
MAX_GUEST_USERS=1000
ENABLE_ANALYTICS=false

# Performance (Production only)
WORKERS=4
TIMEOUT=30

# Optional: Email (for future password reset feature)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASSWORD=your-email-password
# EMAIL_FROM=noreply@soundsteps.com

# Optional: Analytics (for future integration)
# GOOGLE_ANALYTICS_ID=UA-XXXXX-Y
# MIXPANEL_TOKEN=your-mixpanel-token

# Optional: Storage (for future cloud storage)
# AWS_ACCESS_KEY_ID=your-aws-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret
# AWS_S3_BUCKET=soundsteps-assets
