# Environment Variables - Production

# Application Settings
APP_ENV=production
APP_TITLE=SoundSteps
APP_VERSION=1.1.0

# Server Configuration
HOST=0.0.0.0
PORT=8000
RELOAD=false

# Security (⚠️ MUST CHANGE THESE!)
SECRET_KEY=REPLACE_WITH_STRONG_RANDOM_KEY_AT_LEAST_32_CHARACTERS_LONG
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS Settings (Production - specify allowed origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_CREDENTIALS=true
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# Database
DATA_DIR=/app/data
USERS_FILE=/app/data/users.json

# API Configuration
API_BASE_URL=https://yourdomain.com/api

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Feature Flags
ENABLE_GUEST_ACCESS=true
MAX_GUEST_USERS=10000
ENABLE_ANALYTICS=true

# Performance
WORKERS=4
TIMEOUT=30
